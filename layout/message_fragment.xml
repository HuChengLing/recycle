<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="horizontal"
    android:background="#74a434"
    android:gravity="center">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="消息"
        android:textSize="18sp"
        android:textColor="#000000"/>
</LinearLayout>
    <LinearLayout
        android:id="@+id/search_linear"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/setbar_bg">
        <SearchView
            android:id="@+id/contactAndGroup_searchView"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="45dp"
            android:queryHint="搜索联系人和群"
            android:iconifiedByDefault="false"
            android:focusable="false"
            android:background="@drawable/search_view"></SearchView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/message_linear"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/setbar_bg"
            android:gravity="center_vertical"
            android:layout_weight="1">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:src="@mipmap/message1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="留言"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_marginLeft="20dp"/>
            <ImageView
                android:id="@+id/message_imv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/message_item"
                android:layout_marginLeft="230dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/setbar_bg"
            android:gravity="center_vertical"
            android:layout_weight="1">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:src="@mipmap/at"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" @我的"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_marginLeft="16dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_right"
                android:layout_marginLeft="215dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/setbar_bg"
            android:gravity="center_vertical"
            android:layout_weight="1">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:src="@mipmap/stranger_message"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="陌生人的消息"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_marginLeft="18dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_right"
                android:layout_marginLeft="165dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/saleman_linearLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/setbar_bg"
            android:gravity="center_vertical"
            android:layout_weight="1">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:src="@mipmap/saleman"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="卖主"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_marginLeft="18dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上个月买的9成新"
                android:textSize="16sp"
                android:textColor="#cccccc"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="85dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8:51"
                android:textSize="16sp"
                android:textColor="#cccccc"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/buyman_linearLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/setbar_bg"
            android:gravity="center_vertical"
            android:layout_weight="1">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:src="@mipmap/buyman"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="买主"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_marginLeft="22dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="嗯我已经收到了"
                android:textSize="16sp"
                android:textColor="#cccccc"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="85dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="昨天"
                android:textSize="16sp"
                android:textColor="#cccccc"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="28dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/setbar_bg"
            android:gravity="center_vertical"
            android:layout_weight="1">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:src="@mipmap/group"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="二手书籍群"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_marginLeft="30dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/setbar_bg"
            android:gravity="center_vertical"
            android:layout_weight="1">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:src="@mipmap/iphone_group"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="iPhone群"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_marginLeft="25dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>